<div class="d-flex justify-content-center text-center">
<ul class="movie_list">
    <h1>Movie Database</h1>
    <br>
    {{#each movie}}
        {{!-- Image database no longer available --}}
        {{!-- <img src ="https://class.s3-website.fr-par.scw.cloud/class/movies/posters{{poster_path}}" alt = "{{title}} poster">  --}}
        <br>
        <h3><u><a href="/movies/{{_id}}">{{title}}</a></u></h3>
        <p><b>Vote Average:</b> {{vote_average}}</p>
        <p><b>Genres:</b> {{genres}}</p>
        <p><b>Production Countries:</b> {{production_countries}}</p>
        <p><b>Overview:</b> {{overview}}</p>
    {{/each}}
</ul>
</div>
<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <li class="page-item">
      <a class="page-link" href="?page=1">First</a>
    </li>
    <li class="page-item">
      <a class="page-link" href="?page={{prev}}">Previous</a>
    </li>
    <li class="page-item">
      <a class="page-link" href="?page={{next}}">Next</a>
    </li>
    <li class="page-item">
      <a class="page-link" href="?page={{pages}}">Last</a>
    </li>
  </ul>
</nav>
